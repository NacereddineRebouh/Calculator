<UserControl
    x:Class="Calculator.View.ScientificView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Calculator.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Border
            Background="DarkSalmon"
            BorderBrush="Salmon"
            BorderThickness="5"
            CornerRadius="150,0,150,0">
            <Grid VerticalAlignment="Center" Background="Transparent">
                <StackPanel>
                    <Button
                        Width="150"
                        Margin="5"
                        Background="Salmon"
                        Content="1"
                        FontFamily="Algerian"
                        FontSize="25"
                        Foreground="WhiteSmoke" />
                    <Button
                        Width="150"
                        Margin="5"
                        Background="Salmon"
                        Content="2"
                        FontFamily="Algerian"
                        FontSize="25"
                        Foreground="WhiteSmoke" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
