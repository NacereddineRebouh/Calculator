    <!--  ********************** Control Buttons Style **********************  -->
    <Style x:Key="BaseControlButtons" TargetType="Button">
        <Setter Property="Background" Value="#FFB7B8B7" />
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="Margin" Value="1" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="#FFB7B8B7" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Minimize" TargetType="Button">
        <!--<EventSetter Event="MouseLeftButtonDown" Handler="Minimize_MouseLeftButtonDown" />-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Border Background="{TemplateBinding Background}" />
                        <TextBlock
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="{TemplateBinding FontSize}"
                            FontWeight="{TemplateBinding FontWeight}"
                            Text="{TemplateBinding Content}" />
                    </Grid>


                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.Setters>
                    <Setter Property="Background" Value="{StaticResource Hover_Color}" />
                </Trigger.Setters>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="False">
                <Trigger.Setters>
                    <Setter Property="Background" Value="{StaticResource Main_Color}" />
                </Trigger.Setters>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="Maximize" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate x:Name="list" TargetType="{x:Type Button}">
                    <Grid>
                        <Border Background="{TemplateBinding Background}" />
                        <Image
                            x:Name="btn_Image"
                            Width="25"
                            Height="25"
                            VerticalAlignment="Center">
                            <Image.Style>
                                <Style>
                                    <Setter Property="Image.Source" Value="/images/Maximize.png" />
                                </Style>
                            </Image.Style>
                        </Image>


                    </Grid>



                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.Setters>
                    <Setter Property="Background" Value="{StaticResource Hover_Color}" />
                </Trigger.Setters>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="False">
                <Trigger.Setters>
                    <Setter Property="Background" Value="{StaticResource Main_Color}" />
                </Trigger.Setters>
            </Trigger>
        </Style.Triggers>
        <!--<EventSetter Event="MouseLeftButtonDown" Handler="Full_MouseLeftButtonDown" />-->

    </Style>
    <Style x:Key="Exit" TargetType="Button">
        <!--<EventSetter Event="MouseLeftButtonDown" Handler="Exit_MouseLeftButtonDown" />-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Border Background="{TemplateBinding Background}" />
                        <TextBlock
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="{TemplateBinding FontSize}"
                            FontWeight="{TemplateBinding FontWeight}"
                            Text="{TemplateBinding Content}" />
                    </Grid>


                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>

            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.Setters>
                    <Setter Property="Background" Value="Red" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger.Setters>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="False">
                <Trigger.Setters>
                    <Setter Property="Background" Value="{StaticResource Main_Color}" />
                </Trigger.Setters>
            </Trigger>
        </Style.Triggers>
    </Style>
